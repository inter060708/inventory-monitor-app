<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= item.name %> History</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1><%= item.name %> History</h1>
    <p>Current Quantity: <%= item.quantity %></p>

    <!-- Styled table for history records -->
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Type</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% history.forEach(record => { 
          const formattedDate = new Date(record.date).toLocaleString('en-GB', {
            timeZone: 'Asia/Bangkok',   // UTC+7
            year: '2-digit',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit',
            second: undefined,
            hour12: false  // 24-hour format
          });
        %>
          <tr>
            <td><%= formattedDate %></td>
            <td><%= record.type === 'in' ? 'Added' : 'Removed' %></td>
            <td><%= record.quantity %> units</td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <a href="/inventory" class="btn">Back to Inventory</a>
  </div>
</body>
</html>




